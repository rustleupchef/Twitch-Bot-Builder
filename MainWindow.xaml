<Window x:Class="Twitch_Bot_Builder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Twitch_Bot_Builder"
        mc:Ignorable="d"
        Title="Twitch Bot Builder" Height="450" Width="800" Background="#333332" FontSize="16" Icon="/Logo.png">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Border">
                <Setter Property="Padding" Value="11,5,11,5"></Setter>
            </Style>

            <Style TargetType="Button">
                <Style.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"></Setter>
                    </Style>
                </Style.Resources>
                <Setter Property="Background" Value="#FFA762FD"></Setter>
                <Setter Property="Foreground" Value="White"></Setter>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border>
            <Button Name="one"  Click="one_Click"></Button>
        </Border>
        <Border Grid.Row="1">
            <Button Name="two"  Click="two_Click"></Button>
        </Border>
        <Border Grid.Row="2">
            <Button Name="three"  Click="three_Click"></Button>
        </Border>
        <Border Grid.Row="3">
            <Button Name="four"  Click="four_Click"></Button>
        </Border>
        <Border Grid.Row="4">
            <Button Name="five"  Click="five_Click"></Button>
        </Border>
        <Border Grid.Row="5">
            <Button Name="six"  Grid.Row="5" Click="six_Click"></Button>
        </Border>
        <Border Grid.Row="6">
            <Button Name="seven"  Grid.Row="6" Click="seven_Click"></Button>
        </Border>
        <Border Grid.Row="7">
            <Button Name="eight"  Grid.Row="7" Click="eight_Click"></Button>
        </Border>
        <Border Grid.Row="8">
            <Button Name="nine"   Grid.Row="8" Click="nine_Click"></Button>
        </Border>

        <Border Grid.Column="1" Grid.RowSpan="1">
            <Button Name="next" Click="Next_Click">Next</Button>
        </Border>
        <Border Grid.Column="1" Grid.Row="1">
            <Button Name="back" Click="Back_Click">Back</Button>
        </Border>
        <Border Grid.Column="1" Grid.Row="2">
            <Button Name="add" Click="Add_Click">Add</Button>
        </Border>
        <Border Grid.Column="1" Grid.Row="3">
            <Button Name="start" Click="Start_Click">Start</Button>
        </Border>
    </Grid>
</Window>
